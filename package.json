{
  "name": "lms",
  "version": "1.0.0",
  "description": "LM Studio SDK",
  "main": "index.js",
  "packageManager": "npm@10.5.0",
  "scripts": {
    "start": "npm run gen && turbo run watch",
    "gen": "cd scripts && node ./generateEsmPackageJson.mjs",
    "watch-tsc": "tsc --build tsconfig.build.json --watch",
    "watch": "concurrently --prefix=none \"npm run watch-tsc\" \"turbo run watch\"",
    "clean": "turbo run clean",
    "build-scaffolds-json": "cd scaffolds && node ./buildScaffoldsJSON.js",
    "build-sdk": "turbo run build --filter=@lmstudio/sdk",
    "build-cli": "turbo run clean --filter=@lmstudio/lms-cli && turbo run build --filter=@lmstudio/lms-cli --filter=@lmstudio/cli",
    "build-lmstudio": "turbo run build --filter=lmstudio",
    "build": "npm run clean && npm run gen && turbo run build && npm run build-scaffolds-json",
    "make-cli": "cd packages/lms-cli && npm run clean && npm run build && cd ../../publish/cli && npm run make",
    "make": "npm run clean && npm run gen && tsc --build tsconfig.build.json && npm run build-sdk && npm run make-cli && npm run build-lmstudio && npm run build-scaffolds-json",
    "publish": "npm run build && lerna publish --no-git-tag-version --no-git-reset",
    "upload-scaffolds-manifest": "cd scaffolds && node ./upload.js",
    "postinstall": "patch-package && turbo run postinstall --filter=@lmstudio/lms-cli",
    "test": "jest --testMatch \"**/?(*.)+(test).ts\" --testMatch \"!**/?(*.)+(heavy).(test).ts\"",
    "test-sequential": "jest --testMatch \"**/?(*.)+(test).ts\" --testMatch \"!**/?(*.)+(heavy).(test).ts\" --runInBand",
    "test-full": "jest --testMatch \"**/?(*.)+(test).ts\" --runInBand",
    "test-watch": "jest --watch --testMatch \"**/?(*.)+(test).ts\" --testMatch \"!**/?(*.)+(heavy).(test).ts\""
  },
  "engines": {
    "node": "^20.12.2",
    "npm": ">=8"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.556.0",
    "@microsoft/api-extractor": "^7.40.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@swc/core": "^1.11.1",
    "@swc/jest": "^0.2.37",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "bundle-declarations-webpack-plugin": "^5.0.1",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "inquirer": "^9.2.14",
    "jest": "^30.0.0-alpha.7",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lerna": "^8.1.2",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "process": "^0.11.10",
    "rollup": "^4.27.4",
    "rollup-plugin-banner2": "^1.3.1",
    "shx": "^0.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "turbo": "^2.5.4",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "node-pty": "npm:@homebridge/node-pty-prebuilt-multiarch"
  },
  "workspaces": [
    "packages/*",
    "publish/*",
    "scaffolds/*"
  ]
}
