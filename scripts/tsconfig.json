{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "swc": true,
    "scopeDir": ".",
    "scope": true
  },
  "include": ["./**/*.ts"]
}
