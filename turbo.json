{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "ts-out/**"]
    },
    "watch": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "make": {
      "persistent": true
    },
    "postinstall": {},
    "clean": {
      "cache": false
    }
  }
} 